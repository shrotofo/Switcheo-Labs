//one way

var sum_to_n_a = function(n) { 
return (n * (n + 1)) / 2; 
}; 

//two way
var sum_to_n_b = function(n) {
  if (n <= 1) {
   return n;
    } 
else { return n + sum_to_n_c(n - 1);  
} 
};

//third way

var sum_to_n_c = function(n) {
    let sum = 0;
    for (let i = 1; i <= n; i++) {
        sum += i;
}
   return sum;   
};
